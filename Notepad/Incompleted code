class Solution {
    public static boolean buddyStrings(String charSwapper, String goal) {
        if (charSwapper.length() != goal.length()) return false;

        char[] arr = charSwapper.toCharArray();

        for (int i = 0; i < arr.length - 1; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                // Swap characters at index i and j
                char temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;

                // Check if it matches goal
                if (new String(arr).equals(goal)) {
                    return true;
                }

                // Swap back to restore original array for next iteration
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
        return false;
    }
}
