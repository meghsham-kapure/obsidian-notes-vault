        }

    }

    public static List<Integer> duplicatedIndex (String word , char searchValue ){
        List <Integer> occurredAt = new ArrayList<>();

        for (int i = 0; i < word.length(); i++) {
            if (searchValue == word.charAt(i)){
                occurredAt.add(i);
            }
        }
        return occurredAt;
    }









    public static ArrayList <String> duplicates (StringBuilder str1, StringBuilder str2, StringBuilder str3 ){

        System.out.println(duplicates (new StringBuilder("meghsham"),new StringBuilder("radhesham"), new StringBuilder("ghanshyam")));


        ArrayList <String> duplicateCharacter = new ArrayList<>();
        for (int i = 0; i < str1.length(); i++) {
            for (int j = 0; j < str2.length(); j++) {
                if(str1.charAt(i)==str2.charAt(j)){
                    for (int k = 0; k <str3.length() ; k++) {
                        if(str1.charAt(i)==str3.charAt(k)) {
                            duplicateCharacter.add(""+ str1.charAt(i));
                            str1.deleteCharAt(i);
                            str2.deleteCharAt(j);
                            str3.deleteCharAt(k);
                        }
                    }
                }
            }
        }
        return duplicateCharacter;


    }

}




